<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aikido Library</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/modern-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AikidoLive.styles.css" asp-append-version="true" />
</head>
<body>    <!-- Modern Header -->
    <header class="modern-header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo-modern">
                    <div class="logo-icon">合</div>
                    <span>Aikido Library</span>
                </a>
                
                <!-- Mobile Menu Button -->
                <button class="mobile-menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </button>
                
                <nav class="nav-container">
                    <ul class="nav-modern">
                        <li><a href="/" title="Home">Home</a></li>
                        <li><a href="/library-titles" title="Library">Library</a></li>
                        <li><a href="/LibraryView" title="Library View">Browse</a></li>
                        <li><a href="/Playlists" title="Playlists">Playlists</a></li>
                        <li><a href="/Blog" title="Blog">Blog</a></li>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li><span class="user-greeting">Hello, @User.Identity.Name!</span></li>
                            <li><a href="/Account/UserProfile" title="Profile" class="btn btn-primary">Profile</a></li>
                            <li><a href="/Account/Logout" title="Logout" class="btn btn-secondary">Logout</a></li>
                        }
                        else
                        {
                            <li><a href="/Account/Login" title="Login" class="btn btn-secondary">Login</a></li>
                            <li><a href="/Account/Register" title="Register" class="btn btn-primary">Register</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Container -->
    <div class="container">
        <div class="main-layout">
            <!-- Main Content Area -->
            <main class="content-area">
                @RenderBody()
            </main>
            
            <!-- Modern Sidebar -->
            <aside class="sidebar-modern">
                <input type="text" class="search-modern" placeholder="Search Aikido content..." id="search">
                
                <div class="menu-section">
                    <h3 class="menu-title">Navigation</h3>
                    <ul class="menu-list">
                        <li class="menu-item">
                            <a href="/library-titles" class="menu-link" title="Browse Library">📚 Library</a>
                        </li>
                        <li class="menu-item">
                            <a href="/LibraryView" class="menu-link" title="Detailed View">👁️ Library View</a>
                        </li>
                        <li class="menu-item">
                            <a href="/Blog" class="menu-link" title="Read Blog">✍️ Blog</a>
                        </li>
                    </ul>
                </div>
                
                <div class="menu-section">
                    <h3 class="menu-title">Aikido Sarasota</h3>
                    <ul class="menu-list">
                        <li class="menu-item">
                            <a href="/Playlists" class="menu-link" title="Training Playlists">🎵 Playlists</a>
                        </li>
                        <li class="menu-item">
                            <a href="#" class="menu-link" title="About Us">ℹ️ About</a>
                        </li>
                        <li class="menu-item">
                            <a href="#" class="menu-link" title="Contact">📧 Contact</a>
                        </li>
                    </ul>
                </div>
            </aside>
        </div>
    </div>

    <!-- Modern Footer -->
    <footer class="footer-modern">
        <div class="container">
            <div class="footer-content">
                <p>&copy; 2024 - Aikido Library. Preserving the art and spirit of Aikido for future generations.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/modern-interactions.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>